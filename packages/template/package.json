{
  "name": "@toolsync/template",
  "version": "0.1.1",
  "description": "Update sections of source files",
  "homepage": "https://toolsync.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LukasHechenberger/toolsync.git",
    "directory": "packages/template"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./out/index.d.ts",
      "default": "./out/index.js"
    }
  },
  "bin": {
    "update-section": "./out/bin.js"
  },
  "scripts": {
    "build": "rslib build",
    "check:exports": "publint",
    "dev": "rslib build --watch",
    "update-readme": "node out/bin.js README.md cli-usage \"\\`\\`\\`\n$(node ./out/bin.js --help)\n\\`\\`\\`\""
  },
  "dependencies": {
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@rslib/core": "^0.17.1",
    "@types/node": "^22.15.30",
    "publint": "^0.3.12"
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
