{
  "name": "@devtools/monorepo",
  "version": "0.0.0",
  "description": "No more setting up the same 100 tools when starting a new project",
  "license": "MIT",
  "author": "Lukas Hechenberger <npm@ls-age.com> (https://ls-age.com/)",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "prettier --write .",
    "format:root": "[ \"${CI+z}\" ] && prettier --check . || prettier --write .",
    "ignore-sync": "ignore-sync .",
    "prepare": "devtools prepare --config devtools.json && ignore-sync .",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@devtools/cli": "workspace:*",
    "@turbo/gen": "^2.5.4",
    "ignore-sync": "^8.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.15",
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": ">=20.6.0"
  }
}
